{
  "name": "docuframe",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "vite",
    "setup": "node setup.js",
    "validate-setup": "node setup.js --validate",
    "start-backend": "cd server && npm run dev",
    "install-backend": "cd server && npm install",
    "dev-all": "concurrently \"npm run start-backend\" \"npm start\"",
    "setup-all": "npm run setup && npm run install-backend && echo \"Setup complete! Run: npm run dev-all\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron-pack": "electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@types/jszip": "^3.4.0",
    "adm-zip": "^0.5.16",
    "csv-parse": "^5.6.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.513.0",
    "pdf-lib": "^1.17.1",
    "pdf2json": "^3.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^7.6.0",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.yourcompany.docuframe",
    "productName": "DocuFrame",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "publisherName": "Your Company Name"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "DocuFrame"
    }
  }
}
